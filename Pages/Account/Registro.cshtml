@model SupermarketWEB.Pages.Account.RegistroModel
@{
    ViewData["Title"] = "Registro";
}
<h1>Create</h1>


<h4>Registro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
