@page
@model SupermarketWEB.Pages.Account.LoginModel
@{
}
<form method="post">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="mb-3">
        <label for="exampleInputEmail" class="form-label">Email address</label>
        <input type="email" class="form-control"
        asp-for="Usuario.Email"
        id="exampleInputEmail" aria-describedby="emailHelp" />
        <div id="emailHelp" class="form-text">we'll never you email with anyone else'</div>
        <div>
            <span archive="text-danger" asp-validation-for="Usuario.Email"></span>
        </div>
    </div>
    <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input type="password" class="form-control" 
        asp-for="Usuario.Password"
        id="exampleInputPassword1" />
        <div>
            <span class="text-danger" asp-validation-for="Usuario.Password"></span>
        </div>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1" />
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>